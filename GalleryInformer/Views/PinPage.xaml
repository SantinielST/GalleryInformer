<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GalleryInformer.ViewModels"
             x:Class="GalleryInformer.Views.PinPage"
             Title="PinPage">
    
    <VerticalStackLayout Spacing="20" VerticalOptions="Center" Padding="40">

        <Label Text="{Binding TitleText}" 
               FontSize="24" 
               HorizontalOptions="Center" />

        <Entry Text="{Binding InputPin}"
               Placeholder="****"
               Keyboard="Numeric"
               MaxLength="4"
               IsPassword="True"
               HorizontalTextAlignment="Center"
               FontSize="32" />

        <Button Text="{Binding ButtonText}"
                Command="{Binding SubmitPinCommand}"
                HeightRequest="50"
                BackgroundColor="#2196F3"
                TextColor="White" />

    </VerticalStackLayout>
</ContentPage>